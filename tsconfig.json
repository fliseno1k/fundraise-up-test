{
    "compilerOptions": {
        "esModuleInterop": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["dom", "esnext"],
        "strict": true,
        "sourceMap": true,
        "target": "esnext",
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "@/app/*": ["src/app/*"],
            "@/shared/*": ["src/shared/*"],
            "@/widgets/*": ["src/widgets/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
